@{
    ViewData["Title"] = "Privacy Policy";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $("body").click(function(){
            $("p").fadeToggle(2000);
            $("h1").fadeToggle(2000);
        });
    });
</script>



<style>
    p {
        padding-left: 50px;
        padding-right: 50px;
        padding-bottom: 50px;
        padding-top: 10px;
    }

    h1 {
        padding-left: 50px;
        padding-right: 50px;
        padding-bottom: 10px;
        padding-top: 50px;
        text-shadow: 2px 2px pink;
    }

    .newspaper {
        /* Old Chrome, Safari, Opera */
        -webkit-column-count: 3;
        -webkit-column-width: 100px;

        /* Old Firefox */
        -moz-column-count: 3;
        -moz-column-width: 100px;

        /* Statndard syntax */
        column-count: 3;
        column-width: 100px;
    }
</style>



